<h1>Instructors</h1>
<table>
    <tr>
        <th> Name </th> 
        <th> Cohort </th>
        <th> Edit </th>
    </tr>
    <tr>
        <% @instructors.order('last_name ASC').each do |instructor_info| %>
            <td> <a href="/instructors/<%= instructor_info.id%>"><%= instructor_info.last_name %> <%= instructor_info.first_name %> </a></td>
            <% @cohort = Cohort.where(instructor_id:instructor_info.id) %>
            <td> <%= @cohort.name %> </td>
            <td> <button><a href="/instructors/<%= instructor_info.id %>/edit"><%= image_tag "icons8-edit-64.png" %></a></button></td>
        <% end %>
    </tr>
</table>

